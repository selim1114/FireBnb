<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Greybg"
    tools:context=".présentation.vue.FiltreVue">

    <!-- Top Image -->

    <!-- Background Design -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="122dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/undraw_adventure_re_ncqp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/design" />

    <!-- Bottom Card -->
    <FrameLayout
        android:id="@+id/bottomSquare"
        android:layout_width="524dp"
        android:layout_height="270dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/carre">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Destination Input -->
                <EditText
                    android:id="@+id/destinationInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext"
                    android:hint="Destination"
                    android:padding="12dp"
                    android:textColorHint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/dateIntervalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/AucuneDate"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnSelectDates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/SélectionDates" />

                <EditText
                    android:id="@+id/peopleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext"
                    android:hint="@string/NombrePersonnes"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColorHint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/PrixParNuit" />

                <SeekBar
                    android:id="@+id/priceSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000" />

                <TextView
                    android:id="@+id/priceRangeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0 - illimité"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bouton"
                    android:padding="12dp"
                    android:text="@string/rechercher"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>
