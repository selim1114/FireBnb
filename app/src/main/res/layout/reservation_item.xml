<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="299dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/clickRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="161dp">

                <ImageView
                    android:id="@+id/header_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/room2" />

                <TextView
                    android:id="@+id/etat_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_reservation_status"
                    android:padding="4dp"
                    android:text="En attente"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/titre"
                style="@style/TextAppearance.MaterialComponents.Headline3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Chalet alpin à Interlaken"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_arrivee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrivée : 12 Février 2025" />

                    <TextView
                        android:id="@+id/date_sortie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Départ : 19 Février 2025" />

                    <TextView
                        android:id="@+id/prix_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prix total : 900 $" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ville"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neuilly-sur-Marne"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="France"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
